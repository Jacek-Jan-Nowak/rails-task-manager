<h1><%= @task.title %></h1>
<%= link_to 'Edit task', edit_task_path %>
<p><%= @task.details %></p>
<p><% if @task.completed %>
      <p><i class='far fa-check-square '></i> This task is completed</p>
      <% else %>
      <p><i class='far fa-square '></i> This task is not completed yet</p>
      <% end %>
</p>
<%= link_to tasks_path do %>
  <p><i class="fas fa-undo-alt"></i> Back to tasks list</p>
<% end %>